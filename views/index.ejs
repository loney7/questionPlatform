<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="/assets/css/custom.css">-->
    <title><%= title %></title>
</head>
<style>
    .table-wrapper {
        margin-top: 50px;
    }

    .player-img {
        width: 40px;
        height: 40px;
    }

    .add-player-form {
        margin-top: 50px;
    }
</style>
<body>
<div class="page-wrapper">
    <nav class="navbar navbar-light bg-light">
        <span class="navbar-brand mb-0 h1" ><a href="/">Bullseye</a></span>
        <a class="float-right" href="/add" title="Add a New Question">Add a Question</a>
    </nav>

    <div class="table-wrapper">

        <%
         if (problems.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Problem Statement</th>
                        <th scope="col">Input</th>
                        <th scope="col">Output</th>
                        <th scope="col">Constraints</th>
                        <th scope="col">Time</th>
                        <th scope="col">Tags</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% problems.forEach((problem, index) => { %>
                        <tr>
                            <th scope="row"><%= problem.Pid %></th>
                            <td><%= problem.ProbStat %></td>
                            <td><%= problem.Input %></td>
                            <td><%= problem.Output %></td>
                            <td><%= problem.Constraints %></td>
                            <td><%= problem.timeLimit %></td>
                            <td>@<%= problem.tags %></td>
                            <td>
                                <a href="/view/<%= problem.Pid %>"  rel="noopener" class="btn btn-sm btn-success">View</a>
                                <a href="/edit/<%= problem.Pid %>"  rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= problem.Pid %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No questions found. Go <a href="/add" >here</a> to add questions.</p>
        <% } %>
    </div>
</div>
</body>
</html>